@model IEnumerable<Nvllesson10.Models.Category>

@{
    ViewData["Title"] = "Danh mục loại";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="NvlCreate" class="btn btn-primary">Thêm mới</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CateId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CateName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CateStatus)
            </th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CateId)
                </th>
            <td>
                @Html.DisplayFor(modelItem => item.CateName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CateStatus)
                    @if (item.CateStatus == true)
                    {
                        <text>Hiển thị</text>
                    }
                    else
                    {
                        <text>Tạm khoá</text>
                    }

            </td>
            <td>
                    <a asp-action="NvlEdit" asp-route-nvlId="@item.CateId">Edit</a> |
                    <a asp-action="NvlDetails" asp-route-nvlId="@item.CateId">Details</a> |
                    <a asp-action="NvlDelete" asp-route-nvlId="@item.CateId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
